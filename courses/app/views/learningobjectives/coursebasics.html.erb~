<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </div>
<div class="field">
    <%= f.label :subtitle %><br>
    <%= f.text_area :subtitle %>
  </div>
<div class="field">
    <%= f.label :language %><br>
    <%= f.number_field :language_id %>
  </div>
  <div class="field">
    <%= f.label :Level %><br>
    <%= f.number_field :level_id %>
  </div>
  <div class="field">
    <%= f.label :certificate %><br>
    <%= f.check_box :certificate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
